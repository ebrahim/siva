<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en" dir="<%= t(:dir) %>">
	<head>
		<title><%= @page_title || t(:siva) %></title>
		<meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
		<meta http-equiv="imagetoolbar" content="no" />
		<meta name="distribution" content="all" />
		<meta name="robots" content="all" />	
		<meta name="resource-type" content="document" />
		<meta name="MSSmartTagsPreventParsing" content="true" />
		<%= stylesheet_link_tag 'base' %>
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'formtastic', 'formtastic_changes' %>
	</head>
	
	<body>
		<div id="container">
			<table border="0">

		<!-- Header -->
		<tr>
			<td valign="middle" align="center" id="headerTD">
				<%= t(:siva) %>
			</td>
		</tr>
		<tr>
			<td valign="top" id="loginTD">
				<% if logged_in? %>
				<li><%= link_to t(:user_logout), logout_path %></li>
				<% else %>
				<li><%= link_to t(:user_login), login_path %></li>
				<li><%= link_to t(:user_signup), signup_path %></li>
				<% end %>
			</td>
		</tr>

		<!-- Body -->
		<tr>
			<td valign="top" id="contentTD">
				<div id="content">
					<%= flash_messages %>
					<%= yield :layout %>
				</div>
			</td>
		</tr>

		<!-- Footer -->
		<tr>
			<td valign="middle" align="center" id="footerTD">
				<%= t(:siva) %>
			</td>
		</tr>
		</table>
		</div>
	</body>
</html>
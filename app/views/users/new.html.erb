<%= siva_title :user_signup %>

<% @user.password = @user.password_confirmation = nil %>
<% semantic_form_for @user do |form| %>
	<% form.inputs :name => t(:user_your_details) do %>
		<%= form.input :login %>
		<%= form.input :email %>
		<%= form.input :password %>
		<%= form.input :password_confirmation %>
	<% end %>
	<% form.inputs :name => t(:user_signup_openid) do %>
		<li class="string required">
		<label for="openid_url"><%= t(:user_openid_url) %></label>
		<%= text_field_tag :openid_url, params[:openid_url] || params['openid.identity'] %>
		</li>
	<% end %>
	<% form.buttons do %>
		<%= form.commit_button :label => t(:user_signup) %>
	<% end %>
<% end %>


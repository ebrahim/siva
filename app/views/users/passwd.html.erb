<%= siva_title :user_update_password %>

<% semantic_form_for @user do |form| %>
	<p><%= t(:user_enter_new_password) %></p>
	<% form.inputs :name => t(:user_update_password) do %>
		<%= form.input :password %>
		<%= form.input :password_confirmation %>
	<% end %>
	<%= form.buttons %>
<% end %>

<%= link_to t(:form_show), @user %>
<%= link_to t(:form_edit), edit_user_path(@user) %>
<%= link_to t(:form_index), users_path if current_user && current_user.has_role?('admin') %>
<%= link_to_back %>

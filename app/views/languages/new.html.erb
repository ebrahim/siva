<table width="100%" class="formTable">
	<tr>
		<td>
			<% semantic_form_for @language do |form| %>
				<% form.inputs do %>
					<%= form.input :name %>
					<%= form.input :code %>
					<%= form.input :rtl, :as => :radio, :collection => [[t(:ltr), false], [t(:rtl), true]] %>
				<% end %>
				<%= form.buttons %>
			<% end %>
		</td>
	</tr>
</table>
<%= link_to t(:form_back), languages_path %>

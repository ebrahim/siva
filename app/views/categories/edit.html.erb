<% semantic_form_for @category do |form| %>
	<% form.inputs do %>
		<%= form.input :parent_id, :collection => nested_set_options(Category) { |i| "#{'-' * i.level} #{i.name}" } %>
		<%= form.input :name %>
	<% end %>
	<%= form.buttons %>
<% end %>

<%= link_to t(:form_show), @category %>
<%= link_to t(:form_index), categories_path %>
<%= link_to_back %>

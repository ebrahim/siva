<% semantic_form_for word do |form| %>
	<% form.inputs do %>
		<%= form.input :language, :include_blank => false, :collection => Language.all.sort { |a,b| a.name <=> b.name } %>
		<% form.inputs :for => :word_forms do |word_forms_fields| %>
			<%= render 'word_form_fields', :f => word_forms_fields %>
		<% end %>
		<%= link_to_add_fields t(:form_add), form, :word_forms %>
	<% end %>
	<% form.buttons do %>
		<%= form.commit_button %>
	<% end %>
<% end %>

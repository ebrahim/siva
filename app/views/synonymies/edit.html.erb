<% semantic_form_for @synonymy do |form| %>
	<% form.inputs do %>
		<%= form.input :word1, :include_blank => false %>
		<%= form.input :word2, :include_blank => false %>
		<%= form.input :category, :include_blank => false, :collection => nested_set_options(Category) { |i| "#{'-' * i.level} #{i.name}" } %>
	<% end %>
	<%= form.buttons %>
<% end %>

<%= link_to t(:form_show), @synonymy %>
<%= link_to t(:form_back), synonymies_path %>

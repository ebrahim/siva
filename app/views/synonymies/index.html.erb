<table width="100%" class="contentTable">
	<tr>
		<th colspan="2"><%= Synonymy.human_attribute_name :word1 %></th>
		<th colspan="2"><%= Synonymy.human_attribute_name :word2 %></th>
		<th><%= Synonymy.human_attribute_name :category %></th>
		<th colspan="3"><%= t(:actions) %></th>
	</tr>
	<% @synonymies.each do |synonymy| %>
	<tr>
		<td><%= synonymy.word1.language.name %></td>
		<td><%= link_to forms_summary(synonymy.word1), synonymy.word1 %></td>
		<td><%= synonymy.word2.language.name %></td>
		<td><%= link_to forms_summary(synonymy.word2), synonymy.word2 %></td>
		<td><%= link_to synonymy.category.name, synonymy.category %></td>
		<td><%= link_to t(:form_show), synonymy %></td>
		<td><%= link_to t(:form_edit), edit_synonymy_path(synonymy) %></td>
		<td><%= link_to t(:form_remove), synonymy, :confirm => t(:synonymy_remove_confirm), :method => :delete %></td>
	</tr>
	<% end %>
</table>

<%= link_to t(:form_create), new_synonymy_path %>

